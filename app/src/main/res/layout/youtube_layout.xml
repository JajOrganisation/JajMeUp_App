<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/youtube_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbackground"
    tools:context=".activity.YouTubeJAJActivity"
    android:orientation="vertical"
    android:baselineAligned="false">
        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youtubeAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
                android:id="@+id/userAlarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="@string/hidden_username_string"
                android:textColor="@android:color/white"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/messageAlarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:text="@string/hidden_message_string"
                android:layout_weight="1"/>

        <Button
            android:id="@+id/stopAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_gravity="bottom"
            android:background="@drawable/button_drawable"
            android:padding="12dp"
            android:text="@string/button_stop_string"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_weight="1"/>
</LinearLayout>