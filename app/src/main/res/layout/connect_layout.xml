<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ConnectActivity"
    android:background="@drawable/gradientbackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/connectElement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/userNameConnect"
            android:background="@drawable/button_drawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Courriel"
            android:textColor="@android:color/white"
            android:textColorHint="@color/hintColor"
            android:textSize="20dp"
            android:padding="5sp"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/passwordConnect"
            android:background="@drawable/button_drawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/white"
            android:hint="Motdepasse"
            android:textColorHint="@color/hintColor"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:padding="5sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/connectButtonLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_drawable"
            android:text="Connexion"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:padding="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>