<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ConnectActivity"
    android:background="@drawable/gradientbackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/elementRegistration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/profilePictureRegistration"
            android:layout_gravity="center_horizontal"
            android:layout_width="100pt"
            android:layout_height="100pt"
            android:src="@drawable/ic_account_circle_black_24dp" />

        <EditText
            android:id="@+id/emailRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:text="bonjour@bonjour.fr"
            android:hint="Pseudo"
            android:textSize="20dp"/>

       <EditText
            android:id="@+id/pseudoRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:textColor="@android:color/white"
            android:text="Bob"
            android:hint="Pseudo"
           android:textSize="20dp"/>

        <EditText
        android:id="@+id/passwordRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:text="123456"
        android:hint="Motdepasse"
        android:inputType="textPassword"
        android:textSize="20dp"/>

        <EditText
            android:id="@+id/passwordRegistrationConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="123456"
            android:hint="Motdepasse"
            android:textColor="@android:color/white"
            android:inputType="textPassword"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/registrationButtonRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_drawable"
            android:text="Inscription"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:padding="12dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>