<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/popup_drawable"
    android:padding="20dp"
    >
    <TextView
        android:id="@+id/votant_wakeup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hidden_username_string"
        android:textColor="@android:color/white"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        />
    <TextView
        android:id="@+id/message_wakeup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hidden_message_string"
        android:textColor="@android:color/white"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        />
    <TextView
        android:id="@+id/yt_wakeup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hidden_youtube_link_string"
        android:textColor="@android:color/white"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        />
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >
        <Button
            android:id="@+id/button_closepop_wakeup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_drawable"
            android:textColor="@android:color/white"
            android:text="@string/button_ok_string"
            style="?android:attr/buttonBarButtonStyle"/>
        <Button
            android:id="@+id/button_response_wakeup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_drawable"
            android:textColor="@android:color/white"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:text="@string/button_answer_string"
            style="?android:attr/buttonBarButtonStyle"/>
    </TableRow>
</LinearLayout>