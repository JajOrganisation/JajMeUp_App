<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/popup_drawable"
    android:padding="20dp"
    >
    <TextView
        android:id="@+id/yt_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/label_youtube_link_string"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/youtubelinkpop"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:textColorHint="@color/hintColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:textIsSelectable="true"
            android:focusable="true"
            android:hint="@string/hint_youtube_link_string" />
        <ImageButton
            android:id="@+id/pastebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/youtubelinkpop"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_paste"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/youtube_video_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/message_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/label_write_message_string"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        />
    <EditText
        android:id="@+id/messagepop"
        android:inputType="text"
        android:textColorHint="@color/hintColor"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="70"
        android:hint="@string/hint_message_string"/>
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >
        <Button
            android:id="@+id/button_votepop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_drawable"
            android:textColor="@android:color/white"
            android:text="@string/button_wake_up_string"
            style="?android:attr/buttonBarButtonStyle"
            />
        <Button
            android:id="@+id/button_closepop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_drawable"
            android:textColor="@android:color/white"
            android:text="@string/button_cancel_string"
            style="?android:attr/buttonBarButtonStyle"/>
    </TableRow>
</LinearLayout>